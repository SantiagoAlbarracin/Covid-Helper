<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView


                    android:id="@+id/textView"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_register_name"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="58dp"
                    android:layout_marginLeft="16dp" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_register_name"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="44dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/textView2"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_register_lastname"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="130dp" />
                <EditText
                    android:id="@+id/editTextLastname"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_register_lastname"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="116dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/textView3"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_register_dni"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="198dp" />
                <EditText
                    android:id="@+id/editTextDni"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_register_dni"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="184dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/textView4"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_mail"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="266dp" />
                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_mail"
                    android:inputType="textEmailAddress"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="252dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/textView5"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_password"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="337dp" />
                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_password"
                    android:inputType="textPassword"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="323dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/textView6"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_register_commission"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="407dp" />
                <EditText
                    android:id="@+id/editTextCommission"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_register_commission"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="393dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/textView7"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_register_group"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="478dp" />
                <EditText
                    android:id="@+id/editTextGroup"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/edit_register_group"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="464dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnCancel"
                    android:layout_height="wrap_content"
                    android:onClick="onClickCancel"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/button_cancel"
                    tools:layout_editor_absoluteX="46dp"
                    tools:layout_editor_absoluteY="562dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnAccept"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:onClick="onClickAccept"
                    android:text="@string/button_register"
                    tools:layout_editor_absoluteX="231dp"
                    tools:layout_editor_absoluteY="562dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressBarReg"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="181dp"
                    tools:layout_editor_absoluteY="648dp" />
            </LinearLayout>


























        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>